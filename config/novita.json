{
  "agents": {
    "defaults": {
      "model": {
        "primary": "novita/deepseek/deepseek-r1"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },
  "models": {
    "mode": "merge",
    "providers": {
      "novita": {
        "baseUrl": "https://api.novita.ai/v3/openai",
        "apiKey": "${NOVITA_API_KEY}",
        "api": "openai-completions",
        "models": [
          { "id": "deepseek/deepseek-r1", "name": "DeepSeek R1" },
          { "id": "deepseek/deepseek_v3", "name": "DeepSeek V3" }
        ]
      }
    }
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "trustedProxies": ["172.16.0.0/12", "10.0.0.0/8", "192.168.0.0/16"],
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": true
    }
  },
  "browser": {
    "headless": true,
    "defaultProfile": "openclaw",
    "noSandbox": true
  }
}
