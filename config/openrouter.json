{
  "agents": {
    "defaults": {
      "model": {
        "primary": "openrouter/deepseek/deepseek-chat"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },
  "models": {
    "providers": {
      "openrouter": {
        "baseUrl": "https://openrouter.ai/api/v1",
        "models": [
          {
            "name": "deepseek/deepseek-chat"
          },
          {
            "name": "anthropic/claude-sonnet-4"
          },
          {
            "name": "openai/gpt-4o"
          },
          {
            "name": "google/gemini-2.5-pro"
          }
        ]
      }
    }
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "trustedProxies": [
      "172.16.0.0/12",
      "10.0.0.0/8",
      "192.168.0.0/16"
    ],
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": true
    }
  },
  "browser": {
    "headless": true,
    "defaultProfile": "openclaw",
    "noSandbox": true
  }
}
