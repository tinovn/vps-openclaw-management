{
  "agents": {
    "defaults": {
      "model": {
        "primary": "xai/grok-3-latest"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },
  "models": {
    "providers": {
      "xai": {
        "baseUrl": "https://api.x.ai/v1",
        "models": [
          {
            "name": "grok-3-latest"
          },
          {
            "name": "grok-3-mini-latest"
          },
          {
            "name": "grok-2-latest"
          }
        ]
      }
    }
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "auth": {
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "trustedProxies": [
      "172.16.0.0/12",
      "10.0.0.0/8",
      "192.168.0.0/16"
    ],
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": true
    }
  },
  "browser": {
    "headless": true,
    "defaultProfile": "openclaw",
    "noSandbox": true
  }
}
